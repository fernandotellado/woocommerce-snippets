/**
 * Cambiar icono estándar de pago por PayPal en la página de pago.
 */
 
function ayudawp_extended_paypal_icon() {
     // imagen de los iconos de Paypal - Debe estar en la carpeta del tema activo - Sustituye el nombre del archivo de ejemplo por el tuyo
     return get_stylesheet_directory_uri() . '/imagen-tarjetas-paypal.jpg';
}
add_filter( 'woocommerce_paypal_icon', 'ayudawp_extended_paypal_icon' );
